<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
        xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
        xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
        xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
                      https://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-4.20.xsd">

    <changeSet author="gemini" id="1">
        <createTable tableName="m_credit_bureau">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="is_active" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="is_available" type="boolean">
                <constraints nullable="false"/>
            </column>
            <column name="country" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

    <changeSet author="gemini" id="2">
        <createTable tableName="m_credit_bureau_parameter">
            <column name="id" type="bigint" autoIncrement="true">
                <constraints primaryKey="true" nullable="false"/>
            </column>
            <column name="credit_bureau_id" type="bigint">
                <constraints nullable="false" foreignKeyName="fk_credit_bureau_parameter_credit_bureau" references="m_credit_bureau(id)"/>
            </column>
            <column name="parameter_name" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
            <column name="parameter_value" type="varchar(255)">
                <constraints nullable="false"/>
            </column>
        </createTable>
    </changeSet>

</databaseChangeLog>
